<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_productimg"
                    android:layout_width="@dimen/dimen_55"
                    android:layout_height="@dimen/dimen_55"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/no_image_new" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LACTAID 2% MILK 100% LACTOSE FREE HALF GALLON"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/ll_qtyandCart"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/ll_quantity_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:layout_below="@+id/tv_discount_name_rv_item"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="Suspicious0dp">


                        <RelativeLayout
                            android:id="@+id/llMinus"
                            android:clickable="true"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_25">

                            <ImageView
                                android:id="@+id/img_minus"
                                android:layout_width="@dimen/dimen_12"
                                android:layout_height="@dimen/dimen_12"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:src="@drawable/ic_minus_black" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_item_quantity"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:maxLength="3"
                            android:inputType="number"
                            android:text="1"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:clickable="true"
                            android:id="@+id/llplus"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_25">

                            <ImageView
                                android:id="@+id/img_plus"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/dimen_12"
                                android:layout_height="@dimen/dimen_12"
                                android:layout_margin="@dimen/_2sdp"
                                android:src="@drawable/ic_plus_black" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_7sdp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivAddtoCart"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:clickable="true"
                            android:padding="@dimen/_2sdp"
                            android:onClick="onClick"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:src="@drawable/ic_cart_white"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_3sdp"
            android:background="@color/very_light_grey" />

    </LinearLayout>

</LinearLayout>