<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@null"
    android:id="@+id/ll_root_dialog_common_for_app">

    <TextView
        android:visibility="gone"
        android:paddingRight="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="@string/lbl_title_payment_process"
        android:id="@+id/tv_root_dialog_payment_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:layerType="software"
        android:background="@drawable/dotted"
        android:id="@+id/img_dialog_payment_process"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:paddingRight="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:text=""
        style="@style/custom_button"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="@dimen/_17sdp"
        android:padding="@dimen/dimen_ButtonPadding"
        android:textColor="@color/White"
        android:id="@+id/tv_message_dialog_common_for_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

