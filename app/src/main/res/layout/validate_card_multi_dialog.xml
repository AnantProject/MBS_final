<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <TextView
            android:id="@+id/txtErrorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select Item"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/round_shap_red"
            android:padding="@dimen/dimen_ButtonPadding"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/_75sdp"
            android:layout_marginRight="@dimen/_75sdp"
            android:text="@string/str_OK"
            android:textSize="@dimen/dimen_ButtonTextSize"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>
</ScrollView>