<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:paddingTop="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_15">

    <TextView
        android:textSize="@dimen/dimen_15"
        android:id="@+id/tv_title"
        android:text=""
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_line"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_below="@+id/tv_legal_title"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:id="@+id/tv_giftno_not_match"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:text=""
        android:textColor="@color/black"
        android:id="@+id/tv_giftcard_bal_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:text=""
        android:textColor="@color/black"
        android:id="@+id/tv_message"
        android:visibility="gone"
        android:textSize="@dimen/_13sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:id="@+id/tv_giftResMsg"
        android:visibility="gone"
        android:textSize="@dimen/_13sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:id="@+id/tv_giftdata_is_real"
        android:textStyle="italic"
        android:textSize="@dimen/_13sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/tv_lastpurchase_withthiscard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:id="@+id/tv_giftcard_date"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="OK"
        android:id="@+id/btn_ok"
        android:textSize="@dimen/dimen_ButtonTextSize"
        android:textColor="@color/White"
        android:padding="@dimen/dimen_ButtonPadding"
        android:background="@drawable/round_shap_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>