<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_signup">

    <TextView
        android:id="@+id/tv_email_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_7"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
        android:padding="@dimen/dimen_5"
        android:textColor="@color/pressed_color_light"
        android:textSize="@dimen/dimen_20"
        Tools:text="Email" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_below="@+id/tv_email_option"
        android:background="@color/lighter_grey" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_7"
        android:gravity="center"
        android:padding="@dimen/dimen_5"
        android:textColor="@color/pressed_color_light"
        android:textSize="@dimen/dimen_20"
        Tools:text="More" />

</RelativeLayout>