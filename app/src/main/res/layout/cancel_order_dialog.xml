<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_all"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Confirmation Cancelation:"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_close_black" />
    </LinearLayout>


    <View
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llTitle"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeborder"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Web Order#" />

            <TextView
                android:id="@+id/tvWeborderVal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDateorder"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:text="Date of order:" />

            <TextView
                android:id="@+id/tvDateorderVal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Customer:" />

            <TextView
                android:id="@+id/tvCustomerVal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="Amount($):" />

            <TextView
                android:id="@+id/tvAmountVal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/_12sdp"
                android:id="@+id/tvDelivery"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/black"
                android:text="Delivery:" />

            <TextView
                android:id="@+id/tvDeliveryVal"
                android:layout_width="0dp"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPayment"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Payment:" />

            <TextView
                android:id="@+id/tvPaymentVal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/default_color"
                android:text="" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvcreditcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/default_color"
            android:text="The credit card payment will be reversed." />


        <LinearLayout
            android:layout_margin="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_height="wrap_content">


            <!--<Button-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="@dimen/dimen_7"-->
            <!--android:id="@+id/btncancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/dimen_ButtonPadding"-->
            <!--android:background="@drawable/round_shap_red"-->
            <!--android:text="CANCEL ORDER"-->
            <!--android:textSize="@dimen/dimen_ButtonTextSize"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="@color/White" />-->


            <Button
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_5"
                android:id="@+id/btnDontcancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_ButtonPadding"
                android:background="@drawable/round_shap_red"
                android:text="DON'T CANCEL"
                android:textSize="@dimen/dimen_ButtonTextSize"
                android:textAllCaps="false"
                android:textColor="@color/White" />


            <Button
                android:id="@+id/btncancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="@drawable/round_shap_red"
                android:text="CANCEL ORDER"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="@dimen/dimen_ButtonTextSize" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>