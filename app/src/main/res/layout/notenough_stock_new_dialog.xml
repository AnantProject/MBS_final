<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner_signup"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_5"
                    android:text="We don't have enough stock"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_close_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtinstock"
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5"
                    android:text="In Stock:"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    />
                <TextView
                    android:id="@+id/txtinstockValue"
                    android:layout_width="0dip"
                    android:layout_weight="0.7"
                    android:gravity="left|center_vertical"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtReqstock"
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5"
                    android:text="Requested:"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txtReqstockValue"
                    android:layout_width="0dip"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dimen_5"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5"
                android:text=""
                android:visibility="gone"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@drawable/round_shap_red"
                    android:padding="@dimen/dimen_ButtonPadding"
                    android:text="Add To Cart"
                    android:textColor="@color/White"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:textSize="@dimen/dimen_ButtonTextSize"
                    Tools:visibility="visible" />

                <Button
                    android:id="@+id/btn_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@drawable/round_shap_red"
                    android:padding="@dimen/dimen_ButtonPadding"
                    android:text="@string/str_Cancel"
                    android:textColor="@color/White"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:textSize="@dimen/dimen_ButtonTextSize" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
